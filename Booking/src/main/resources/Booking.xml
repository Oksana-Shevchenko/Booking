<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">
    
    <bean id="bookingFacade" class="com.epam.facade.BookingFacadeImpl">
    	<constructor-arg ref="eventService"/>
    	<constructor-arg ref="ticketService"/>
    	<constructor-arg ref="userService"/>
    </bean>
    
    <bean id="eventService" class="com.epam.service.EventServiceImpl" autowire="byType"/>
	<bean id="ticketService" class="com.epam.service.TicketServiceImpl" autowire="byType"/>
	<bean id="userService" class="com.epam.service.UserServiceImpl" autowire="byName"/>
	<bean id="repositoryBooking" class="com.epam.repository.RepositoryBookingImpl">
	   <property name="fileNameEvent" value="src/main/resources/Event.json"/>
	   <property name="fileNameTicket" value="src/main/resources/Ticket.json"/>
	   <property name="fileNameUser" value="src/main/resources/User.json"/>
	</bean>
	
	<bean id="userDao" class="com.epam.dao.mock.UserDaoImpl" autowire="byName"/>
	<bean id="ticketDao" class="com.epam.dao.mock.TicketDaoImpl" autowire="byName"/>	
</beans>